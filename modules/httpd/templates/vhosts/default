#########################################################################
##   This file is controlled by Puppet - changes will be overwritten   ##
#########################################################################

<VirtualHost *:<%= http_port %>>

    DocumentRoot /var/www/default/

    <Directory /var/www/default/>
        Order deny,allow
        Allow from all
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/vhost/default/error.log
    CustomLog ${APACHE_LOG_DIR}/vhost/default/access.log vhost_combined_varnish

</VirtualHost>
