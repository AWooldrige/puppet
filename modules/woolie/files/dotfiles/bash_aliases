###############################################################################
# All of these are blocking operations (prompt won't appear before)
###############################################################################
set -o vi
export EDITOR=vim

alias ls='ls --color=auto -lash'

# Auto launch tmux session for interactive shells
if [[ $- == *i* ]]; then
    if ! [[ -n "$TMUX" ]]; then
        tmux new-session -A -s main
    fi
fi
