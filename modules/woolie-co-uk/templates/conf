<VirtualHost *:80>

    DocumentRoot /var/www/woolie-co-uk

    ServerName woolie.co.uk

    <Directory /var/www/woolie-co-uk/>
        Order deny,allow
        Allow from all
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.woolie-co-uk.log
    CustomLog ${APACHE_LOG_DIR}/access.woolie-co-uk.log combined

</VirtualHost>

<VirtualHost *:80>
        ServerName www.woolie.co.uk
        Redirect permanent / http://woolie.co.uk/
</VirtualHost>
